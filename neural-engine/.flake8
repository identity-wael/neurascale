[flake8]
max-line-length = 127
max-complexity = 10
exclude =
    venv,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    *.egg-info,
    .git,
    .tox,
    dist,
    build,
    *.pyc,
    *.pyo,
    .venv
ignore =
    E203,
    E266,
    E501,
    W503,
    F401,
    F841
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
