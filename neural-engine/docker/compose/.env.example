# Neural Engine Docker Environment Configuration
# Copy this file to .env and update values

# Environment
ENVIRONMENT=development
VERSION=latest

# Database
DB_PASSWORD=neurascale_secure_password
DB_HOST=postgres
DB_PORT=5432
DB_NAME=neural_engine

# Redis
REDIS_PASSWORD=redis_secure_password
REDIS_HOST=redis
REDIS_PORT=6379

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Google Cloud
GCP_PROJECT_ID=development-neurascale
GCP_REGION=northamerica-northeast1
BIGTABLE_INSTANCE=neural-data

# Resource Limits (Development)
NEURAL_PROCESSOR_CPU_LIMIT=2
NEURAL_PROCESSOR_MEMORY_LIMIT=4G
NEURAL_PROCESSOR_REPLICAS=1

# Feature Flags
ENABLE_GPU=false
ENABLE_MONITORING=true
ENABLE_TRACING=false
