[flake8]
max-line-length = 88
extend-ignore = E203, E266, E501, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F841

# Compatibility with Black formatter
max-complexity = 20
select = B,C,E,F,W,T4,B9
