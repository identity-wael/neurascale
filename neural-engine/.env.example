# Google Cloud Configuration
PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=./key.json
REGION=northamerica-northeast1
ZONE=northamerica-northeast1-a

# API Configuration
API_PORT=8080
API_HOST=0.0.0.0
CLOUD_RUN_SERVICE_NAME=neural-api
CLOUD_ENDPOINTS_SERVICE_NAME=${PROJECT_ID}.endpoints.${PROJECT_ID}.cloud.goog

# Neural Processing Configuration
MAX_CHANNELS=1024
DEFAULT_SAMPLING_RATE=1000
LATENCY_TARGET_MS=50

# Development Settings
DEBUG=true
USE_EMULATOR=false

# Vertex AI Configuration
VERTEX_AI_LOCATION=${REGION}
VERTEX_AI_ENDPOINT_NAME=neural-decoder-endpoint
VERTEX_AI_MODEL_NAME=neural-decoder-model

# Cloud KMS Configuration
KMS_KEYRING_NAME=neural-keyring
KMS_KEY_NAME=neural-data-key
KMS_LOCATION=${REGION}

# Secret Manager
SECRET_MANAGER_PROJECT=${PROJECT_ID}

# Pub/Sub Topics
TOPIC_EEG=neural-signals-eeg
TOPIC_MOVEMENTS=decoded-movements
TOPIC_METRICS=system-metrics

# BigQuery Datasets
BQ_DATASET_FEATURES=neural_features
BQ_DATASET_MOVEMENTS=decoded_movements
BQ_DATASET_METRICS=system_metrics

# Cloud Storage Buckets
GCS_BUCKET_DATA=${PROJECT_ID}-neural-data
GCS_BUCKET_MODELS=${PROJECT_ID}-models
GCS_BUCKET_TEMP=${PROJECT_ID}-temp

# Cloud Monitoring
MONITORING_WORKSPACE=${PROJECT_ID}-workspace
MONITORING_ALERT_EMAIL=alerts@neurascale.io

# Cloud Scheduler
SCHEDULER_TIMEZONE=America/Montreal
